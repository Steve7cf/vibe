{
  "name": "vibe",
  "version": "1.0.5",
  "description": "Vibe - Professional Desktop Music Player",
  "homepage": "https://github.com/Steve7cf/vibe",
  "main": "src/main/main.js",
  "scripts": {
    "start": "GDK_BACKEND=x11 ELECTRON_DISABLE_SECURITY_WARNINGS=1 electron .",
    "dev": "GDK_BACKEND=x11 ELECTRON_DISABLE_SECURITY_WARNINGS=1 electron . --dev",
    "build": "electron-builder --linux",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.vibe.musicplayer",
    "productName": "Vibe",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Audio",
      "maintainer": "Steve Bazaar <stevebazaar99@gmail.com>",
      "icon": "build/icons",
      "desktop": {
        "Name": "Vibe",
        "Comment": "Professional Music Player",
        "Categories": "Audio;Player;",
        "StartupWMClass": "Vibe"
      },
      "mimeTypes": [
        "audio/mpeg",
        "audio/flac",
        "audio/wav",
        "audio/ogg",
        "audio/x-m4a"
      ]
    },
    "fileAssociations": [
      {
        "ext": "mp3",
        "name": "MP3 Audio",
        "role": "Editor"
      },
      {
        "ext": "flac",
        "name": "FLAC Audio",
        "role": "Editor"
      },
      {
        "ext": "wav",
        "name": "WAV Audio",
        "role": "Editor"
      },
      {
        "ext": "ogg",
        "name": "OGG Audio",
        "role": "Editor"
      },
      {
        "ext": "m4a",
        "name": "M4A Audio",
        "role": "Editor"
      }
    ]
  },
  "dependencies": {
    "music-metadata": "^10.0.0",
    "node-id3": "^0.2.6",
    "mpris-service": "^2.1.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "keywords": [
    "music",
    "player",
    "audio",
    "electron",
    "linux"
  ],
  "author": {
    "name": "Steve Bazaar",
    "email": "stevebazaar99@gmail.com"
  },
  "license": "MIT"
}
